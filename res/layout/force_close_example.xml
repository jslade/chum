<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    >

  <LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    >

    <Button
     android:gravity="center"
     android:text="Force Close"
     android:id="@+id/force_close"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     />

<TextView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="Press the button to cause the activity to crash.  It will generate a crash report, which will be saved to be dispatched when you start this or another activity"
    />
         
 </LinearLayout>

</LinearLayout>
